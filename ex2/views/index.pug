extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Emprego Cient√≠fico #[a.w3-btn.w3-round.w3-grey(href="/contracts/registo") + ]
    .w3-container
      table.w3-table-all
        tr
          th Id
          th DataInicioContrato
          th DataFimContrato
          th NomeInstituicao
          th AreasInvestigacao
        
        each s in slist
          tr
            td
              a(href="/contracts/"+s._id)= s._id
            td= s.DataInicioContrato
            td= s.DataFimContrato
            td
              a(href="/contracts/"+s.NIPCInstituicao)= s.NomeInstituicao
            td= s.AreasInvestigacao
            
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}